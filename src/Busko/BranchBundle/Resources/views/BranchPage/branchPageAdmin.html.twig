    <a href="{{ path('create_branch') }}"><button class="btn btn-round btn-success"><i class="icon-plus"></i> Add Branch </button></a>

</div>
{% endblock %}

                                      {% block controls %}
<div class="pull-right">


    <button class="btn btn-mini btn-danger btn-account" url="{{ path('delete_branch') }}" id="{{branch.branchId}}" > delete </button>

</div>
{% endblock %}
                                          {% block confirm %}

