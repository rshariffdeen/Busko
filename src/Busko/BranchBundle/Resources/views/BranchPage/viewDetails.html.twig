{% extends "BuskoStyleBundle:Home:basic.html.twig" %}

{% block content %}
	<div class="container-fluid">
		<div class="row-fluid">
                    
			<noscript>
				<div class="alert alert-block span10">
					<h4 class="alert-heading">Warning!</h4>
					<p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
				</div>
			</noscript>
		
                        <div id="content" class="span10 ">
			<!-- content starts -->
			
                        <div class="row-fluid">
                            <div class="box span12">
                                
                                <div class="box-content ">
                                    
                           <div class="pull-right">
                               <a href="{{ path('branch_page') }}">
                                   <button class="btn btn-large btn-primary">Back to Branches</button>
                        </a>
                           </div>
                                    <br><br><br><br>

                                    
                                    <div class="box-header well">
                                            
					<h4><i class="icon-locked"></i>Employees</h4>
						
					</div>
                                    <table class="records_list" width="100%">
                                    <thead>
                                        <tr>
                                            
                                            <th>Employee ID</th> 
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>City</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                {% for employee in employees %}
                                     <tr>
                                            
                                            <td align="center">{{ employee.id}}</td>
                                            <td align="center">{{ employee.firstName}}</td>
                                             <td align="center">{{ employee.lastName}}</td>           
                                          <td align="center">{{ employee.city}}</td>
                                        </tr>
                                    {% endfor %}
                                         </tbody>
                                </table>
                                    <br><br><br>
                                      <div class="box-header well">
                                            
					<h4><i class="icon-locked"></i>Buses</h4>
						
					</div>
                                    
                                    <table class="records_list" width="100%">
                                    <thead>
                                        <tr>
                                            
                                            <th>Bus License No.</th> 
                                            <th>Model</th>
                                          <th>Route</th> 
                                          <th>Condition</th> 
                                          
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                {% for bus in buses %}
                                     <tr>
                                            
                                            <td align="center">{{ bus.licNum}}</td>
                                            <td align="center">{{ bus.model}}</td>
                                            <td align="center">{{ bus.route}}</td>
                                            <td align="center">{{ bus.conditions}}</td>            
                                          
                                        </tr>
                                    {% endfor %}
                                         </tbody>
                                </table>
                                
                    
                      
           </div>
        </div>
    </div>
</div>
  
{% endblock %}