{% extends "BuskoStyleBundle:Home:basic.html.twig" %}

{% block content %}
<div class="container-fluid">
    <div class="row-fluid">

        <noscript>
        <div class="alert alert-block span10">
            <h4 class="alert-heading">Warning!</h4>
            <p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
        </div>
        </noscript>


        <div id="content" class="span10">
                  <div class="box span12">
                    <div class="box-header well">
                        <h2><i class="icon-gear"></i> Search Bus Stops for City</h2>

                    </div>
                    <div class="box-content">
                        <div class="box-content">
                            <ul class="dashboard-list">
                              
                         
                                <table class="records_list" width="100%">
                                    <thead>
                                        <tr>
                                            <th width="15%"></th>
                                            <th width="20%"></th> 
                                            <th width="5%"></th>  
                                            <th width="20%"></th>
                                            <th width="5%"></th>  
                                            <th width="20%"></th>
                                            <th width="15%"></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <div class ="form-horizontal center">
                                                {{form_start(search)}}
                                                <td></td>
                                            <td align="right">{{ form_label(search.city) }}</td>
                                            <td></td>
                                            <td align="center">{{ form_widget(search.city) }}</td>
                                            <td></td>
                                            <td align="left">{{ form_widget(search.search)}}</td>   
                                            {{form_end(search)}}
                                            </div>
                                    <td></td>
                                        
                                        </tr>
     
                                    </tbody>
                                </table>
                            </ul>

                        </div></div>
                </div>
            <div class="row-fluid">
                <div class="box span12">
                    <div class="box-header well">
                        <h2><i class="icon-gear"></i> List of Bus Stop</h2>

                    </div>
                    <div class="box-content">
                        <div class="box-content">
                            <ul class="dashboard-list">
                                <div class="pull-right">
                                    <a href="{{ path('busstops_new') }}"><button class="btn btn-round btn-success"><i class="icon-plus"></i> Add Bus Stop</button></a>

                                </div>
                         
                                
                                
                                <table class="records_list" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Bus Stop Name</th>
                                            <th>City</th>                                           
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
        {% for entity in entities %}

                                        <tr>
                                            <td align="center">{{ entity.stopId }}</td>
                                            <td align="center">{{ entity.city}}</td>
                                                        
                                          
                                            <td>
                                                <div class="pull-right">

                                          
                                                    <button class="btn btn-mini btn-danger btn-account" url="{{ path('busstops_delete') }}" id="{{entity.stopId}}" > delete </button>

                                                </div>
                                            </td>
                                        </tr>
        {% endfor %}
                                    </tbody>
                                </table>
                            </ul>

                        </div></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal hide fade" id="account">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h3>Confirm</h3>
    </div>
    <div class="modal-body">
        <p align="center">Are you sure you want to delete this bus stop?                          		
        </p>


    </div>
    <div class="modal-footer">

        <form action="empty" id = "continue-form" method="POST">
            <input name="id" id="del-id" type="hidden" value="empty" />
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <input type="submit" class="btn btn-primary" value="continue">
        </form>

    </div>
</div>
    {% endblock %}
