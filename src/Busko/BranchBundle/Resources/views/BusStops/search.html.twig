{% extends '::base.html.twig' %}

{% block body -%}
    <h1>BusStops list</h1>

    <table class="records_list">
        <thead>
            <th>search Bus Stops</th>
            {{form(form)}}
            <tr>
                <th>City</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('busstops_show', { 'id': entity.stopId }) }}">{{ entity.city }}</a></td>
                <td>{{ entity.stopId}}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('busstops_show', { 'id': entity.stopId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('busstops_edit', { 'id': entity.stopId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('busstops_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
