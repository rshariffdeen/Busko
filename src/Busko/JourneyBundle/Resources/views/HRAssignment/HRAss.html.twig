{% extends "BuskoStyleBundle:Home:basic.html.twig" %}

{% block content %}
<div class="container-fluid">
		<div class="row-fluid">
                    <noscript>
				<div class="alert alert-block span10">
					<h4 class="alert-heading">Warning!</h4>
					<p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
				</div>
			</noscript>
                        <div id="content" class="span10">
            <!-- content starts -->






            <div class="row-fluid sortable">
                    <div class="box span12 ">
                        <div class="box-content">
                        <div class="pull-right">
                              <a href="{{ path('site_home') }}"><button class="btn btn-large btn-primary"><i class="icon-chevron-left icon-white"></i>back to dashboard</button></a>
  
                        </div>
                        <br><br> 
                        
                         {{form_start(form,{ 'attr': {'class': 'form-horizontal center'} })}}
                            <div class="control-group warning">
      {{form_label(form.licNum, 'Bus',{ 'label_attr': {'class': 'control-label'} })}}
                        
                        <div class="controls">
                        {{form_widget(form.licNum,{'attr':{'data-rel':'chosen'}})}}
                               <span class="help-inline">{{ form_errors(form.licNum) }}</span>
                       </div></div>
                        
                        <div class="control-group warning">
      {{form_label(form.driv, 'Driver',{ 'label_attr': {'class': 'control-label'} })}}
                        
                        <div class="controls">
                        {{form_widget(form.driv,{'attr':{'data-rel':'chosen'}})}}
                               <span class="help-inline">{{ form_errors(form.driv) }}</span>
                       </div></div>
                        
                        <div class="control-group warning">
      {{form_label(form.ass, 'Assistant',{ 'label_attr': {'class': 'control-label'} })}}
                        
                        <div class="controls">
                        {{form_widget(form.ass,{'attr':{'data-rel':'chosen'}})}}
                               <span class="help-inline">{{ form_errors(form.ass) }}</span>
                       </div></div>
                        <div class="control-group warning">
      {{form_label(form.ass, ' ',{ 'label_attr': {'class': 'control-label'} })}}
                        
                        <div class="controls">
                        {{form_widget(form.submit,{'attr':{'class':'btn btn-success'}})}}
                       </div></div>
                        {{form_end(form)}}
                        
                        
                        
                        
                    </div></div></div>
                
                        
                
                        </div>
                
                
                </div>


                

</div>

                        
                        {% endblock %}


