{% extends "BuskoStyleBundle:Home:basic.html.twig" %}

{% block content %}
<div class="container-fluid">
    <div class="row-fluid">

        <noscript>
        <div class="alert alert-block span10">
            <h4 class="alert-heading">Warning!</h4>
            <p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
        </div>
        </noscript>


        <div id="content" class="span10">
                  <div class="box span12">
                    <div class="box-header well">
                        <h2><i class="icon-gear"></i> Search Routes</h2>

                    </div>
                    <div class="box-content">
                        <div class="box-content">
                            <ul class="dashboard-list">
                              
                         
                                <table class="records_list" width="100%">
                                    <thead>
                                        <tr>
                                            <th width="15%"></th>
                                            <th width="20%"></th> 
                                            <th width="5%"></th>  
                                            <th width="20%"></th>
                                            <th width="5%"></th>  
                                            <th width="20%"></th>
                                            <th width="15%"></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <div class ="form-horizontal center">
                                                {{form_start(search)}}
                                                <td></td>
                                            <td align="right">{{ form_label(search.routeId) }}</td>
                                            <td></td>
                                            <td align="center">{{ form_widget(search.routeId) }}</td>
                                            <td></td>
                                            <td align="left">{{ form_widget(search.search)}}</td>   
                                            {{form_end(search)}}
                                            </div>
                                    <td></td>
                                        
                                        </tr>
     
                                    </tbody>
                                    
                                </table>
                                <br>
                                   
                                    
                                 <table class="records_list" width="100%">
                                    <thead>
                                        <tr>
                                            <th width="30%">Route Name</th>
                                            <th width="30%">Start Stop</th>                                           
                                            <th width="30%">End Stop</th>
                                            
                                        </tr>
                                    </thead>
                                    
                                    <tbody>
                                        <br>
                                         <br>

                                        <tr>
                                            <td align="center">{{ entities.routeId }}</td>
                                            <td align="center">{{ entities.startStop}}</td>
                                            <td align="center">{{ entities.endStop}}</td>
                                            
                                            <td>
                                                <div class="pull-right">

                                            <a href="{{ path('routes_new') }}"><button class="btn btn-round btn-success"><i class="icon-plus"></i> Add Route </button></a>

                                                    <!--button class="btn btn-mini btn-danger btn-account"  > delete </button-->

                                                </div>
                                            </td>
                                        </tr>
        
                                    </tbody>
                                </table>
                            </ul>

                        </div></div>
                </div>
            <div class="row-fluid">
                <div class="box span12">
                    <div class="box-header well">
                        <h2><i class="icon-gear"></i> List of intermediates</h2>

                    </div>
                    <div class="box-content">
                        <div class="box-content">
                            <ul class="dashboard-list">
                                <div class="pull-right">
                                   
                                </div>
                         
                                
                                
                                <table class="records_list" width="100%">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th></th>                                           
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    {% for entity in entities.stop %}
                                    <tbody>
        
                                        
                                        <tr>
                                            <td align="center">{{ entity }}</td>
                                            <td align="center"></td>
                                            <td align="center"></td>
                                            <td>
                                                <div class="pull-right">

                                          
                                                    <!--button class="btn btn-mini btn-danger btn-account"  > delete </button-->

                                                </div>
                                            </td>
                                        </tr>
                                       
        
                                    </tbody>
                                     {% endfor %}
                                </table>
                            </ul>

                        </div></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal hide fade" id="account">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h3>Confirm</h3>
    </div>
    <div class="modal-body">
        <p align="center">Are you sure you want to delete this bus stop?                          		
        </p>


    </div>
    <div class="modal-footer">

        <form action="empty" id = "continue-form" method="POST">
            <input name="id" id="del-id" type="hidden" value="empty" />
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <input type="submit" class="btn btn-primary" value="continue">
        </form>

    </div>
</div>
    {% endblock %}
