{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Intermediates list {{entities[1].stationNumber}}</h1>

    <table class="records_list">
        <thead>
            
            <tr>
                <th>Stationnumber</th>
                <th>Routeid</th>
                <th>Duration</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('intermediates_show', { 'id': entity.stopId,'rId': entity.routeId }) }}">{{ entity.stationNumber }}</a></td>
                <td>{{ entity.routeId }}</td>
                <td>{{ entity.duration }}</td>
                <td>{{ entity.stopId }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('intermediates_show', { 'id': entity.stopId , 'rId': entity.routeId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('intermediates_edit', { 'id': entity.stopId , 'rId': entity.routeId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('intermediates_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
