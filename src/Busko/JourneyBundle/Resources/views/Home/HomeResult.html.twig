{% extends "BuskoStyleBundle:Home:basic.html.twig" %}
{% block menu %}
{% endblock %}
{% block content %}


<div class="row-fluid sortable ">
    <div class=" span1"></div>

    <div class=" span5 ">
        <p align="center">
            <img alt="Bus Ko Logo" align="center" src="{{asset('bundles/buskostyle/img/logo.png')}}" width="200" height="190"/><br>
        </p>
        <p align="justify">
            BusKo is a transportation company which operates large number of busses on public bus routes. This company has branches in most major cities in the country. <br><br>Now you can search for route information such as bus arrival time and departure time on the public routes we operate on.
        </p>
    </div>




    <div class="box span5">
        <div class="box-header well" data-original-title>
            <h2><i class="icon-search"></i> Search Route Information</h2>

        </div>
        <div class="box-content">


                    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                    {{ form_errors(form) }}
            <div class="control-group">
                      {{form_label(form.StartBusStop)}}
                <div class="controls">
                        {{form_widget(form.StartBusStop)}}
                </div></div>

            <div class="control-group">
                      {{form_label(form.StopBusStop)}}
                <div class="controls">
                        {{form_widget(form.StopBusStop)}}
                </div></div>

            <div class="control-group">
                      {{form_label(form.date)}}
                <div class="controls">
                        {{form_widget(form.date,{'value':"now"|date("m/d/Y")})}}
                </div></div>

            <div class="control-group">
                      {{form_label(form.from)}}
                <div class="controls">
                        {{form_widget(form.from)}} :00 H
                </div></div>

            <div class="control-group">
                      {{form_label(form.to)}} 
                <div class="controls">
                        {{form_widget(form.to)}} :00 H
                </div></div>

            <div class="control-group">
                      {{form_label(form.submit)}}
                <div class="controls">
                        {{form_widget(form.submit)}}
                </div></div>

                        {{form_end(form)}}




        </div>
    </div><!--/span-->

</div><!--/row-->





<div class="row-fluid sortable">
    <div class="box span10 center">
        <div class="box-header well">
            <h2><i class="icon-alert"></i>Schedule Information</h2>

        </div>
        <div class="box-content alerts">
            <div class="alert alert-success">
                {% if number == 1 %}
                There is {{number}} bus from {{start}} to {{stop}}.
                {% else %}
                There are {{number}} buses from {{start}} to {{stop}}.
                {% endif %}
            </div>
            <table width="100%"> 
                <tr>
                    <td>Bus Number</td>
                    <td>Route</td> 
                    <td>Time- {{start}} </td>
                    <td>Time- {{stop}}</td>
                </tr>
        {% for result in results %}

                

                
                    <p align="justify"><strong>
                            <td>{{ result['busNo'] }}</td>
                            <td>{{ result['route'] }}</td>
                            <td>{{ result['startTime'] }}</td>
                            <td>{{ result['stopTime'] }}</td>





        {% endfor %} 
                            </table>   
                </div>
        </div>

    </div>
</div><!--/span-->
{% endblock%}
