{% extends "BuskoStyleBundle:Home:basic.html.twig" %}
{% block menu %}
{% endblock %}
{% block content %}

<table width="100%">
    <tr>
        <td width="8%"> </td>
        <td width="40%">
            <div class="row-fluid sortable">
                <p align="center">
                    <img alt="Bus Ko Logo" align="center" src="{{asset('bundles/buskostyle/img/logo.png')}}" width="200" height="190"/><br>
                </p>
                <p align="justify">
                    BusKo is a transportation company which operates large number of busses on public bus routes. This company has branches in most major cities in the country. <br><br>Now you can search for route information such as bus arrival time and departure time on the public routes we operate on.
                </p>
                <hr>
                <div class="box span12">
                    <div class="box-header well">
                        <h2><i class="icon-alert"></i> Messages</h2>
                        <div class="box-icon">
                            <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                        </div>
                    </div>
                    <div class="box-content alerts">
                        <div class="alert alert-error">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            <strong>Oh snap!</strong> Change a few things up and try submitting again.
                        </div>
                        <div class="alert alert-success">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            <strong>Well done!</strong> You successfully read this important alert message.
                        </div>
                        <div class="alert alert-info">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            <strong>Heads up!</strong> This alert needs your attention, but it's not super important.
                        </div>
                        <div class="alert alert-block ">
                            <button type="button" class="close" data-dismiss="alert">×</button>
                            <h4 class="alert-heading">Warning!</h4>
                            <p>Best check yo self, you're not looking too good. Nulla vitae elit libero, a pharetra augue. Praesent commodo cursus magna, vel scelerisque nisl consectetur et.</p>
                        </div>
                    </div>	
                </div><!--/span-->

        </td>

        <td width="4%"></td>
        <td width="40%">
            <div class="row-fluid sortable">
                <div class="box span12">
                    <div class="box-header well" data-original-title>
                        <h2><i class="icon-search"></i> Search Route Information</h2>

                    </div>
                    <div class="box-content">
                                           
                    <div class="alert alert-error">
                            
                            {{errorMsg}}
                        </div>            
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                    {{ form_errors(form) }}
                     <div class="control-group">
                      {{form_label(form.StartBusStop)}}
                         <div class="controls">
                        {{form_widget(form.StartBusStop)}}
                       </div></div>
                        
                          <div class="control-group">
                      {{form_label(form.StopBusStop)}}
                         <div class="controls">
                        {{form_widget(form.StopBusStop)}}
                       </div></div>
                        
                          <div class="control-group">
                      {{form_label(form.date)}}
                         <div class="controls">
                        {{form_widget(form.date,{'value':"now"|date("m/d/Y")})}}
                       </div></div>
                        
                          <div class="control-group">
                      {{form_label(form.from)}}
                         <div class="controls">
                        {{form_widget(form.from)}} :00 H
                       </div></div>
                        
                          <div class="control-group">
                      {{form_label(form.to)}} 
                         <div class="controls">
                        {{form_widget(form.to)}} :00 H
                       </div></div>
                        
                          <div class="control-group">
                      {{form_label(form.submit)}}
                         <div class="controls">
                        {{form_widget(form.submit)}}
                       </div></div>
                        
                        {{form_end(form)}}
       



                    </div>
                </div><!--/span-->

            </div><!--/row-->

        </td>
        <td width="8%"> </td>


    </tr>


</table>


{% endblock%}
