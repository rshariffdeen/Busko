{% extends "BuskoStyleBundle:Home:basic.html.twig" %}

{% block content %}
<div class="container-fluid">
    <div class="row-fluid">

        <noscript>
        <div class="alert alert-block span10">
            <h4 class="alert-heading">Warning!</h4>
            <p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
        </div>
        </noscript>


        <div id="content" class="span10">
            <div class="row-fluid">
                <div class="box span12">
                    <div class="box-header well">
                        <h2><i class="icon-gear"></i> Buses</h2>

                    </div>
                    <div class="box-content">
                        <div class="box-content">
                            <ul class="dashboard-list">
                                <div class="pull-right">
                                    
                                    <a href="{{ path('add_repair') }}"><button class="btn btn-round btn-success"><i class="icon-plus"></i> Add Repair </button></a>
                                </div>
                                <br><br>
                                <table class="records_list" width="100%">
                                    <thead>
                                        <tr>
                                            <th>License Plate</th>
                                            <th>Model</th>
                                            <th>Capacity</th>
                                            <th>Condition</th>
                                                   <th>Branch </th>
                                            <th>Route </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
        {% for entity in entities %}

                                        <tr>
                                            <td align="center">{{ entity.licNum }}</td>
                                            <td align="center">{{ entity.model }}</td>
                                            <td align="center">{{ entity.capacity }}</td>                
                                            <td align="center"><span class="label label-warning">{{ entity.conditions }}</span></td>
                                            <td align="center">{{ entity.branch.branchId }}</td> 
                                            <td align="center">{{ entity.route.routeId }}</td> 
                                            <td>
                                                <div class="pull-right">

                                                   
                                                   
                                                    <a href=" {{ path('show_repairs', { 'id': entity.licNum }) }}"><button  class="btn btn-mini btn-info">View Repairs</button></a>
                                   

                                                </div>
                                            </td>
                                        </tr>
        {% endfor %}
                                    </tbody>
                                </table>
                            </ul>

                        </div></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal hide fade" id="account">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h3>Confirm</h3>
    </div>
    <div class="modal-body">
        <p align="center">Are you sure you want to delete this bus?                          		
        </p>


    </div>
    <div class="modal-footer">

        <form action="empty" id = "continue-form" method="POST">
            <input name="id" id="del-id" type="hidden" value="empty" />
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <input type="submit" class="btn btn-primary" value="continue">
        </form>

    </div>
</div>
    {% endblock %}
