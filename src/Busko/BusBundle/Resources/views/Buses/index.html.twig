{% extends "BuskoStyleBundle:Home:basic.html.twig" %}

{% block content %}
<div class="container-fluid">
    <div class="row-fluid">
        <div id="content" class="span10">
        <div class="box-content span12">
    <h1>Buses list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Capacity</th>
                <th>Model</th>
                <th>Conditions</th>
                <th>LicNum</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('buses_show', { 'id': entity.licNum }) }}">{{ entity.capacity }}</a></td>
                <td>{{ entity.model }}</td>
                <td>{{ entity.conditions }}</td>
                <td>{{ entity.licNum }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('buses_show', { 'id': entity.licNum }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('buses_edit', { 'id': entity.licNum }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('buses_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
</div>
        </div>
    </div>
</div>
    {% endblock %}
