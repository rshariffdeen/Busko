                                            <input type="submit" value="{{ 'registration.submit'|trans }}" />
                                        </div>
                                    </form>
				</div><!--/span-->
			</div><!--/row-->
				</div><!--/fluid-row-->
		
	</div><!--/.fluid-container-->


{% endblock%}