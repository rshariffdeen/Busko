{% extends "BuskoStyleBundle:Home:basic.html.twig"%}

{% block content %}

<div class="container-fluid">
    <div class="row-fluid">


        <!-- left menu ends -->

        <noscript>
        <div class="alert alert-block span10">
            <h4 class="alert-heading">Warning!</h4>
            <p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
        </div>
        </noscript>

        <div id="content" class="span10">
            <!-- content starts -->





            <div class="row-fluid">
                <div class="box span12">
                    <div class="box-header well">
                        <h2><i class="icon-info-sign"></i> Welcome!</h2>

                    </div>
                    <div class="box-content">
                        <h1>Charisma <small>free, premium quality, responsive, multiple skin admin template.</small></h1>
                        <p>Its a live demo of the template. I have created Charisma to ease the repeat work I have to do on my projects. Now I re-use Charisma as a base for my admin panel work and I am sharing it with you :)</p>
                        <p><b>All pages in the menu are functional, take a look at all, please share this with your followers.</b></p>

                        <p class="center">
                            <a href="http://usman.it/free-responsive-admin-template" class="btn btn-large btn-primary"><i class="icon-chevron-left icon-white"></i> Back to article</a> 
                            <a href="http://usman.it/free-responsive-admin-template" class="btn btn-large"><i class="icon-download-alt"></i> Download Page</a>
                        </p>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>

            <div class="row-fluid sortable">


                <div class="box span6">
                    <div class="box-header well" data-original-title>
                        <h2><i class="icon-user"></i> Administrators</h2>
                        <div class="box-icon">
                            <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                            <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <div class="box-content">
                            <ul class="dashboard-list">

                                  {% for admin in admins %}
                                <li>
                                    <a href="#">
                                        <img class="dashboard-avatar" alt="Saruar Ahmed" src="http://www.gravatar.com/avatar/564e1bb274c074dc4f6823af229d9dbb.png?s=50"></a>
                                    <strong>Name:</strong> <a href="#">Usman
                                    </a><br>
                                    <strong>Employee ID:</strong> {{admin.id}}<br>
                                    <strong>Driving License:</strong> <span class="label label-success">{{ admin.machineNumber }}</span>  

                                    <div class="pull-right">

                                        <a href="{{ path('assistants_show', { 'id': admin.id }) }}"><button  class="btn btn-mini btn-primary">show</button></a>

                                        <a href="{{ path('assistants_edit', { 'id': admin.id }) }}"><button class="btn btn-mini btn-inverse">edit</button></a>

                                    </div>
                                </li>
        {% endfor %}

                            </ul>
                        </div>
                    </div>
                </div><!--/span-->

                <div class="box span6">
                    <div class="box-header well" data-original-title>
                        <h2><i class="icon-user"></i> Operators</h2>
                        <div class="box-icon">
                            <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                            <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <div class="box-content">
                            <ul class="dashboard-list">



                                  {% for operator in operators %}
                                <li>
                                    <a href="#">
                                        <img class="dashboard-avatar" alt="Sheikh Heera" src="http://www.gravatar.com/avatar/3232415a0380253cfffe19163d04acab.png?s=50"></a>
                                    <strong>Name:</strong> <a href="#">Usman
                                    </a><br>
                                    <strong>Employee ID:</strong> {{operator.id}}<br>
                                    <strong>Driving License:</strong> <span class="label label-success">{{ operator.machineNumber }}</span>  

                                    <div class="pull-right">

                                        <a href="{{ path('assistants_show', { 'id': operator.id }) }}"><button  class="btn btn-mini btn-primary">show</button></a>

                                        <a href="{{ path('assistants_edit', { 'id': operator.id }) }}"><button class="btn btn-mini btn-inverse">edit</button></a>

                                    </div>
                                </li>
        {% endfor %}

                            </ul>
                        </div>
                    </div>
                </div><!--/span-->






            </div><!--/row-->

            <div class="row-fluid sortable">


                <div class="box span6">
                    <div class="box-header well" data-original-title>
                        <h2><i class="icon-user"></i> Drivers</h2>
                        <div class="box-icon">
                            <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                            <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <div class="box-content">
                            <ul class="dashboard-list">
                                                             {% for driver in drivers %}
                                <li>
                                    <a href="#">
                                        <img class="dashboard-avatar" alt="Usman" src="http://www.gravatar.com/avatar/f0ea51fa1e4fae92608d8affee12f67b.png?s=50"></a>
                                    <strong>Name:</strong> <a href="#">Usman
                                    </a><br>
                                    <strong>Employee ID:</strong> {{driver.id}}<br>
                                    <strong>Driving License:</strong> <span class="label label-success">{{ driver.driverLicenceNumber }}</span>  

                                    <div class="pull-right">

                                        <a href="{{ path('drivers_show', { 'id': driver.id }) }}"><button  class="btn btn-mini btn-primary">show</button></a>

                                        <a href="{{ path('drivers_edit', { 'id': driver.id }) }}"><button class="btn btn-mini btn-inverse">edit</button></a>

                                    </div>
                                </li>
        {% endfor %}

                            </ul>
                        </div>
                    </div>
                </div><!--/span-->

                <div class="box span6">
                    <div class="box-header well" data-original-title>
                        <h2><i class="icon-user"></i> Assistants</h2>
                        <div class="box-icon">
                            <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
                            <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
                        </div>
                    </div>
                    <div class="box-content">
                        <div class="box-content">
                            <ul class="dashboard-list">
                                               {% for assistant in assistants %}
                                <li>
                                    <a href="#">
                                        <img class="dashboard-avatar" alt="Usman" src="http://www.gravatar.com/avatar/f0ea51fa1e4fae92608d8affee12f67b.png?s=50"></a>
                                    <strong>Name:</strong> <a href="#">Usman
                                    </a><br>
                                    <strong>Employee ID:</strong> {{assistant.id}}<br>
                                    <strong>Driving License:</strong> <span class="label label-success">{{ assistant.machineNumber }}</span>  

                                    <div class="pull-right">

                                        <a href="{{ path('assistants_show', { 'id': assistant.id }) }}"><button  class="btn btn-mini btn-primary">show</button></a>

                                        <a href="{{ path('assistants_edit', { 'id': assistant.id }) }}"><button class="btn btn-mini btn-inverse">edit</button></a>

                                    </div>
                                </li>
        {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div><!--/span-->






            </div><!--/row-->



            <!-- content ends -->
        </div><!--/#content.span10-->
    </div><!--/fluid-row-->


{% endblock %}
